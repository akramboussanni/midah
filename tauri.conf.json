{
  "$schema": "https://tauri.app/v2/tauri.schema.json",
  "productName": "Midah Soundboard",
  "version": "0.2.0",
  "identifier": "midah",
  "mainBinaryName": "Midah Soundboard",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "dist",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": ["migrated"]
    },
    "windows": [
      {
        "label": "main",
        "title": "Midah Soundboard",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": true,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": [
      "msi"
    ]
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "dialog": {
      "all": true
    },
    "globalShortcut": {
      "all": true
    }
  }
}